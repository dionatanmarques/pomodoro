<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    app:cardCornerRadius="4dp"
    android:background="@color/material_grey_300"
    android:layout_marginBottom="20dp"
    app:contentPadding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/taskTitle"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/taskDescription" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/taskPomodoro" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:layout_marginTop="20dp">

                <Button
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnPlay"
                    android:textColor="@android:color/white"
                    android:background="@android:color/holo_blue_dark"
                    android:layout_gravity="right"
                    android:drawableLeft="@drawable/ic_play_arrow_white_24dp"
                    android:padding="16dp" />

                <Button
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnDone"
                    android:textColor="@android:color/holo_green_dark"
                    android:background="@android:color/holo_green_dark"
                    android:layout_gravity="right"
                    android:drawableLeft="@drawable/ic_check_white_24dp"
                    android:padding="16dp"
                    android:layout_marginLeft="20dp" />

                <Button
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnEdit"
                    android:textColor="@android:color/white"
                    android:background="@android:color/holo_orange_light"
                    android:layout_gravity="right"
                    android:drawableLeft="@drawable/ic_mode_edit_white_24dp"
                    android:padding="16dp"
                    android:layout_marginLeft="20dp" />

                <Button
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnDelete"
                    android:textColor="@android:color/white"
                    android:background="@android:color/holo_red_dark"
                    android:layout_gravity="right"
                    android:drawableLeft="@drawable/ic_delete_white_24dp"
                    android:padding="16dp"
                    android:layout_marginLeft="20dp"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>